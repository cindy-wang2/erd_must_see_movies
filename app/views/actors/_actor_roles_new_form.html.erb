<!-- Form role start -->
<%= form_with(model: @role, local: true) do |f| %>
<!-- Form role end -->

  <!-- Label and input for character start -->
  <div class="form-group">
    <%= f.label :character %>

    <!-- Input for character start -->
    <%= f.text_field :character, class: "form-control" %>
    <!-- Input for character end -->
  </div>
  <!-- Label and input for character end -->

  <!-- Label and input for actor_id start -->
  <!-- Input for actor_id start -->
  <%= f.hidden_field :actor_id, value: @actor.id %>
  <!-- Input for actor_id end -->
  <!-- Label and input for actor_id end -->

  <!-- Label and input for film_id start -->
  <div class="form-group">
    <%= f.label :film_id %>

    <!-- Input for film_id start -->
    <%= f.text_field :film_id, class: "form-control" %>
    <!-- Input for film_id end -->
  </div>
  <!-- Label and input for film_id end -->

  <%= f.submit "Create role", class: "btn btn-block btn-outline-secondary" %>
<% end %>
